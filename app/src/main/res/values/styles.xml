<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar"  parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tab Layout Text Style -->
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="LayoutHeight_0dp" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="LayoutWidth_0dp" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutWidth_Wrap" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutHeight_Wrap" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutFullScreen" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutWrap" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TextSmallStyle" parent="LayoutWrap" >
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/_50dp</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextInputEditStyle" parent="LayoutHeight_Wrap" >
        <item name="android:minHeight">@dimen/_50dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:focusable">true</item>
        <item name="android:textColorHint">@color/black</item>
       <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextInputLayoutStyle" parent="LayoutHeight_Wrap" >
        <item name="android:layout_marginLeft">@dimen/_5dp</item>
        <item name="android:layout_marginRight">@dimen/_5dp</item>
        <item name="android:layout_marginBottom">@dimen/_5dp</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>


    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
       <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>


    <style name="TextSubTitleStyle" parent="LayoutHeight_Wrap">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:layout_margin">@dimen/_25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextLargeTitleStyle" parent="LayoutWrap">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:layout_margin">@dimen/_10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
